<section class="flex flex-col py-6 md:flex-row items-start">
  <form id="login-form" class="w-11/12 mx-auto card md:w-4/12 md:py-12">
    <h2 class="text-violet-600 text-2xl font-semibold text-center">
      Welcome back!
    </h2>
    <div class="my-6 flex flex-col text-md">
      <label for="login-email" class="font-bold text-stone-800">
        Email
      </label>
      <input
        type="email"
        id="login-email"
        class="p-2 rounded-md focus:outline-rose-400"
      />
    </div>
    <div class="my-6 flex flex-col text-md">
      <label for="login-password" class="font-bold text-stone-800">
        Password
      </label>
      <input
        type="text"
        id="login-password"
        minlength="6"
        class="p-2 rounded-md focus:outline-rose-400"
      />
    </div>
    <button type="submit" class="w-full btn btn-violet">
      Login
    </button>
  </form>
  <form id="signup-form" class="w-11/12 mx-auto card md:w-4/12">
    <h2 class="text-stone-700 text-lg text-center">
      New here?
    </h2>
    <h2 class="text-violet-600 text-2xl font-semibold text-center">
      Create an account
    </h2>
    <div class="my-6 flex flex-col text-md">
      <label for="signup-username" class="font-bold text-stone-800">
        Username
      </label>
      <input
        type="text"
        id="signup-username"
        class="p-2 rounded-md focus:outline-rose-400"
      />
    </div>
    <div class="my-6 flex flex-col text-md">
      <label for="signup-email" class="font-bold text-stone-800">
        Email
      </label>
      <input
        type="email"
        id="signup-email"
        class="p-2 rounded-md focus:outline-rose-400"
      />
    </div>
    <div class="my-6 flex flex-col text-md">
      <label for="signup-password" class="font-bold text-stone-800">
        Password
      </label>
      <input
        type="text"
        id="signup-password"
        minlength="6"
        class="p-2 rounded-md focus:outline-rose-400"
      />
    </div>
    <button type="submit" class="w-full btn btn-violet">
      Signup
    </button>
  </form>
</section>
<script src="/js/login.js"></script>